<UserControl x:Class="PrototypeWPF.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:nodify="https://miroiu.github.io/nodify"
             xmlns:prototypeWpf="clr-namespace:PrototypeWPF"
             xmlns:operations="clr-namespace:PrototypeWPF.ViewModels.Operations"
             xmlns:views="clr-namespace:PrototypeWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <nodify:NodifyEditor
                             ItemsSource="{Binding Nodes}"
                             Connections="{Binding Connections}"
                             PendingConnection="{Binding PendingConnection}"
                             DisconnectConnectorCommand="{Binding DisconnectConnectorCommand}"
                             ContextMenu="{Binding ItemContextMenu}"
                             SelectedItem="{Binding SelectedNode}"
                             SelectedItems="{Binding SelectedNodes}">

            <nodify:NodifyEditor.ItemContainerStyle>
                <Style TargetType="{x:Type nodify:ItemContainer}">
                    <Setter Property="Location" Value="{Binding Location}"/>
                </Style>
            </nodify:NodifyEditor.ItemContainerStyle>

            <nodify:NodifyEditor.ConnectionTemplate>
                <DataTemplate DataType="{x:Type prototypeWpf:ConnectionViewModel}">
                    <nodify:CircuitConnection Source="{Binding Source.Anchor}" Target="{Binding Target.Anchor}" Angle="45" Direction="Forward"/>
                </DataTemplate>
            </nodify:NodifyEditor.ConnectionTemplate>

            <nodify:NodifyEditor.PendingConnectionTemplate>
                <DataTemplate DataType="{x:Type prototypeWpf:PendingConnectionViewModel}">
                    <nodify:PendingConnection StartedCommand="{Binding StartCommand}"
                                       CompletedCommand="{Binding FinishCommnd}"
                                       AllowOnlyConnectors="True"
                                       EnableSnapping="True"/>
                </DataTemplate>
            </nodify:NodifyEditor.PendingConnectionTemplate>

            <nodify:NodifyEditor.ItemTemplate>
                <DataTemplate DataType="{x:Type prototypeWpf:NodeViewModel}">
                    <nodify:Node Header="{Binding Title}" 
              Input="{Binding Input}"
              Output="{Binding Output}">

                        <nodify:Node.InputConnectorTemplate>
                            <DataTemplate DataType="{x:Type prototypeWpf:ConnectorViewModel}">
                                <nodify:NodeInput Header="{Binding Title}"
                                           IsConnected="{Binding IsConnected}"
                                           Anchor="{Binding Anchor, Mode=OneWayToSource}"/>
                            </DataTemplate>
                        </nodify:Node.InputConnectorTemplate>

                        <nodify:Node.OutputConnectorTemplate>
                            <DataTemplate DataType="{x:Type prototypeWpf:ConnectorViewModel}">
                                <nodify:NodeOutput Header="{Binding Title}"
                                            IsConnected="{Binding IsConnected}"
                                            Anchor="{Binding Anchor, Mode=OneWayToSource}"/>
                            </DataTemplate>
                        </nodify:Node.OutputConnectorTemplate>

                    </nodify:Node>
                </DataTemplate>
            </nodify:NodifyEditor.ItemTemplate>

        </nodify:NodifyEditor>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <ContentControl Content="{Binding SelectedNode.OperationViewModel}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type operations:LoadImageViewModel}">
                        <views:LoadImageView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type operations:ResizeViewModel}">
                        <views:ResizeView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Grid>
</UserControl>
